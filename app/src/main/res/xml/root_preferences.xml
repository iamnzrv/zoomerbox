<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/cache_header">

        <Preference
            app:key="@string/clear_cache_key"
            app:title="@string/clear_cache" />

        <SwitchPreferenceCompat
